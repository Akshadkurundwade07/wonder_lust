<% layout("/layouts/boilerplate") %>

<body>
  <div class="container my-5">
    <h1 class="mb-4 text-center">All Listings</h1>

    <div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1 g-4">
      <% for(let listing of allListings){ %>
        <div class="col">
          <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark">
            <div class="card h-100 shadow-sm">
              <img 
                class="card-img-top" 
                src="<%= listing.image %>" 
                alt="<%= listing.title %>" 
                style="height: 20rem; object-fit: cover;">

                
                <div class="card-img-overlay">
                  <h5 class="card-title"></h5>
                  <p class="card-text"></p>
                  <p class="card-text"></p>
                </div>
             
              
              <div class="card-body d-flex flex-column justify-content-between">
                <h5 class="card-title fw-bold mb-2"><%= listing.title %></h5>
                <p class="card-text mb-0">
                  &#8377; <span class="fw-semibold"><%= listing.price.toLocaleString("en-IN") %></span> / night
                </p>
              </div>
            </div>
          </a>
        </div>
      <% } %>
    </div>
  </div>
</body>
