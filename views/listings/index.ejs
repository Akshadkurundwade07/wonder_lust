<% layout("/layouts/boilerplate") %>

<style>

#filters-wrapper {
  overflow-x: auto;
  white-space: nowrap;
  padding: 1rem 0;
  border-bottom: 1px solid #eee;
}

#filters {
  display: inline-flex;
  gap: 2.5rem;
  padding: 0 1rem;
}

#filters::-webkit-scrollbar {
  height: 6px;
}
#filters::-webkit-scrollbar-thumb {
  background: #ccc;
  border-radius: 10px;
}
#filters::-webkit-scrollbar-track {
  background: transparent;
}

/* Each Filter Tab */
.filter {
  display: flex;
  flex-direction: column;
  align-items: center;
  opacity: 0.7;
  transition: 0.2s;
  cursor: pointer;
  min-width: 70px;
}

.filter:hover {
  opacity: 1;
  transform: translateY(-2px);
}

.filter i {
  font-size: 1.7rem;
  margin-bottom: 6px;
}

/* Tax info is hidden by default */
.tax-info {
  display: none;
}
.tax-toggle {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0.6rem 1rem;
  border: 1px solid #ddd;
  border-radius: 2rem;
  cursor: pointer;
  white-space: nowrap;
}


</style>

<div class="container mt-4">

  <!-- Filters Row -->
  <div id="filters" class="mb-4">
    <div class="filter">
      <i class="fa-solid fa-fire"></i>
      <p class="mb-0">Trending</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-bed"></i>
      <p class="mb-0">Rooms</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-city"></i>
      <p class="mb-0">Iconic Cities</p>
    </div>
    <div class="filter">
      <i class="fa-brands fa-fort-awesome"></i>
      <p class="mb-0">Castles</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-snowflake"></i>
      <p class="mb-0">Arctic</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-tents"></i>
      <p class="mb-0">Camping</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-tractor"></i>
      <p class="mb-0">Farms</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-igloo"></i>
      <p class="mb-0">Domes</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-tent"></i>
      <p class="mb-0">tents</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-anchor"></i>
      <p class="mb-0">Cruise</p>
    </div>

    <!-- Tax Toggle -->
    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
        <label class="form-check-label" for="flexSwitchCheckDefault">Display total taxes</label>
      </div>
    </div>
  </div>

  <!-- Listings Grid -->
  <div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1 g-4">

    <% for (let listing of allListings) { %>
      <div class="col">
        <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark">
          <div class="card h-100 shadow-sm">

            <img 
              class="card-img-top"
              src="<%= listing.image.url %>"
              alt="<%= listing.title %>"
              style="height: 18rem; object-fit: cover;"
            >

            <div class="card-body">
              <h5 class="card-title fw-bold mb-1"><%= listing.title %></h5>

              <p class="card-text mb-0 text-muted small">
                â‚¹ <span class="fw-semibold text-dark"><%= listing.price.toLocaleString("en-IN") %></span> / night
                <i class="tax-info">&nbsp;&nbsp;+18% GST</i>
              </p>
            </div>

          </div>
        </a>
      </div>
    <% } %>

  </div>
</div>

<script>
  let taxswitch = document.getElementById('flexSwitchCheckDefault');

  taxswitch.addEventListener('click', () => {
    let taxinfo = document.getElementsByClassName("tax-info");

    for (let info of taxinfo) {
      if (taxswitch.checked) {
        info.style.display = "inline"; 
      } else {
        info.style.display = "none";     
      }
    }
  });
</script>
